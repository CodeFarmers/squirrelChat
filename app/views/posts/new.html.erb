<div class="container">
<div class="hero-unit">
<h3><u>SquirrelChat</u></h3> 
<br />

<div id="chatbox">
<% if @posts %>
	<% @posts.each do |p| %>
		<%= current_user.nickname %> says: <%= p.content %><br />		
	<% end %>
<% end %>
</div>



<%= form_for @post do |p| %>
	<%= p.label "Your message: " %>
	<%= p.text_field :content %>
	
	<%= submit_tag "Send", :class => "btn btn-primary" %>
<% end %>


<br />
</div>
</div>